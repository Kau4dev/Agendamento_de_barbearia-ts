{
  "compilerOptions": {
    // Caminho dos arquivos de origem
    "rootDir": "./src",
    "outDir": "./dist",

    // Configurações para ES Modules
    "module": "commonjs",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true, // Permite importar módulos CommonJS
    "resolveJsonModule": true, // Para poder importar arquivos JSON

    // Outras configurações
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Opções de verificação de tipo mais rigorosas
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Outras opções recomendadas
    "skipLibCheck": true,
    "isolatedModules": true
  }
}